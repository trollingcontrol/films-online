<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/filmImage"
        android:layout_width="180dp"
        android:layout_height="270dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/grey"
        />

    <TextView
        android:id="@+id/noImageText"
        android:text="@string/no_image_text"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/filmImage"
        app:layout_constraintEnd_toEndOf="@id/filmImage"
        app:layout_constraintTop_toTopOf="@id/filmImage"
        app:layout_constraintBottom_toBottomOf="@id/filmImage" />

    <TextView
        android:id="@+id/filmLocalizedName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/filmImage"
        app:layout_constraintStart_toEndOf="@id/filmImage"
        tools:text="Film name"/>

    <TextView
        android:id="@+id/filmName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/filmImage"
        app:layout_constraintTop_toBottomOf="@id/filmLocalizedName"
        tools:text="Film name" />

    <TextView
        android:id="@+id/filmYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/filmImage"
        app:layout_constraintTop_toBottomOf="@id/filmName"
        tools:text="2007" />

    <TextView
        android:id="@+id/filmRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/filmImage"
        app:layout_constraintTop_toBottomOf="@id/filmYear"
        tools:text="9.999" />

    <TextView
        android:id="@+id/filmDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/filmImage"
        app:layout_constraintTop_toBottomOf="@id/filmImage"
        tools:text="Описание Описание Описание" />

</androidx.constraintlayout.widget.ConstraintLayout>